  "usage_examples": {
    "file_only": {
      "command": "python -m shell --data merged_stock_prices.csv --tickers AAPL,GOOGL,MSFT --method mean_variance",
      "description": "Use local CSV file for offline analysis"
    },
    "yahoo_finance": {
      "command": "python -m shell --data-source yahoo --tickers AAPL,GOOGL,MSFT --method mean_variance --real-time",
      "description": "Use Yahoo Finance for real-time data (no API key needed)"
    },
    "alpha_vantage": {
      "command": "python -m shell --data-source alphavantage --api-keys '{\"alphavantage\": \"YOUR_API_KEY\"}' --tickers AAPL,GOOGL --method mean_variance",
      "description": "Use Alpha Vantage with API key for premium data"
    },
    "multi_source_fallback": {
      "command": "python -m shell --data-source alphavantage --fallback-sources yahoo,file --api-keys '{\"alphavantage\": \"YOUR_KEY\"}' --tickers AAPL,GOOGL",
      "description": "Try Alpha Vantage first, fallback to Yahoo Finance, then local files"
    },
    "database_caching": {
      "command": "python -m shell --data-source yahoo --database-url sqlite:///portfolio.db --update-cache --tickers AAPL,GOOGL,MSFT",
      "description": "Use database caching for improved performance"
    },
    "real_time_streaming": {
      "command": "python -m shell --stream-prices --tickers AAPL,GOOGL,TSLA --stream-interval 30",
      "description": "Stream real-time prices every 30 seconds"
    },
    "advanced_optimization": {
      "command": "python -m shell --data-source yahoo --advanced-method risk_parity --tickers AAPL,GOOGL,MSFT,AMZN",
      "description": "Use advanced optimization methods with real-time data"
    },
    "comprehensive_backtest": {
      "command": "python -m shell --run-backtest --data-source yahoo --database-url sqlite:///portfolio.db --tickers AAPL,GOOGL,MSFT,AMZN",
      "description": "Run comprehensive backtesting with database storage"
    }
  },
